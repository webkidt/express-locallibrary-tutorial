extends layout

block content
    h1 #{title}: #{book.title}

    if book_bookinstances.length

        p #[strong Delete the following bookinstance before attempting to delete this book]

        div(style="margin-left:20px;margin-top:20px;")

            h4 BookInstances

            dl
            each bookinstance in book_bookinstances
                dt
                    a(href=bookinstance.url) #{bookinstance._id}
                dd #{bookinstance.status}

    else
        p Do you really want to delete this Author?

        form(action='' method="POST")
            .form-group
                input#bookid.form-control(type='hidden', name='bookid', required='true', value=book._id)

            button.btn.btn-primary(type='submit') Delete